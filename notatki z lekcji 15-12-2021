select nazwa, length(nazwa) from kreatura;

// co to jest tablica Uni code
// dowiedziec się więcej o ASCII

select length("  ") + length(rodzaj) from kreatura;
select length(concat(nazwa,rodzaj)) form kreatura; //concat buduje łańcuch znaków / zwraca łańcuch znaków

select length(nazwa + rodzaj) from kreatura; // to nie zadziała bo operator dodawania nie wykonuje konkatenacji łańcuchu znaków i wtedy length nie zwróci odpowiedniej wartości

select nazwa + rodzaj from kreatura; // ?

select char_length("  ");

